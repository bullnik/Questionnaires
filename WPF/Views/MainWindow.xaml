<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF" xmlns:viewmodels="clr-namespace:WPF.ViewModels"
        xmlns:local1="clr-namespace:WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <local1:SelectProfile Margin="10" Visibility="{Binding SelectProfileVisibility}"/>
        <local1:ProfileView Margin="10" Visibility="{Binding ProfileViewVisibility}"/>
    </Grid>
</Window>
